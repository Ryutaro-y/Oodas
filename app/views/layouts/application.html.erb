<!DOCTYPE html>
<html>
  <head>
    <title>Oodas（簡単発注アプリ）</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
      <%= link_to '簡単発注アプリ Oodas', root_path, class: 'navbar-brand' %>
      <% if current_user %>
        <%= form_tag logout_path, method: :delete do %>
            <%= submit_tag "ログアウト", class: "btn btn-info" %>
        <% end %>
      <% else %>
        <%= form_tag guest_login_path do %>
            <%= submit_tag "ゲストログイン", class: "btn btn-info" %>
        <% end %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to '在庫', stocks_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '注文', orders_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
