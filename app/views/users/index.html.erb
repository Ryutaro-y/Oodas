<p id="notice"><%= notice %></p>

<h3>管理者一覧</h3>
<%= link_to '新規', new_user_path, class: 'btn btn-primary new-btn' %>
<table>
  <thead>
    <tr>
      <th>管理者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>