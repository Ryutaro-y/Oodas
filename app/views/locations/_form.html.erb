<%= form_with(model: location, class: "form-horizontal") do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
        <% location.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="form-group row">
          <%= form.label :name, "ロケーション名", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :stage, "段", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.number_field :stage, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= form.label :ink_name, "インク名", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.text_field :ink_name, class: "form-control" %>
          </div>
        </div>
    
        <div class="form-group row">
          <div class="col-sm-8 offset-sm-4">
            <%= form.submit "登録", class: 'btn btn-primary' %>
          </div>
        </div>
    
      </div>
    </div>
  </div>

<% end %>
