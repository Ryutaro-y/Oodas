<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<h3>注文詳細</h3>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>インク名</th>
      <th>注文個数</th>
      <th>注文者</th>
      <th>仕入れ先名</th>
      <th>注文日</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td class="h6"><%= @order.ink_name %></td>
        <td class="h5" style="color: blue"><%= @order.order_quantity %></td>
        <td class="h6"><%= @order.user.name %></td>
        <td class="h6"><%= @order.supplier.name %></td>
        <td class="h6"><%= @order.order_date %></td>
      </tr>
  </tbody>
</table>
<%= link_to '戻る', orders_path, class: 'btn btn-primary register-btn' %>