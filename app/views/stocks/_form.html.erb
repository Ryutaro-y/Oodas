<%= form_with(model: stock, class: "form-horizontal") do |form| %>
  <% if stock.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
        <% stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="form-group row">
          <%= form.label :ink_name, "インク名", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.text_field :ink_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :color_type, "色", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.text_field :color_type, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :location_name, "ロケーション", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.select :location_name, options_for_select(['ロケーション1', 'ロケーション2', 'ロケーション3']), class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :stage, "段", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.number_field :stage, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :quantity, "在庫数", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.number_field :quantity, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :user_id, "管理者", class: "col-sm-4 col-form-label text-sm-right" %>
          <div class="col-sm-8">
            <%= form.collection_select :user_id, User.all, :id, :name, {}, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-8 offset-sm-4">
            <%= form.submit "登録", class: 'btn btn-primary' %>
          </div>
        </div>

      </div>
    </div>
  </div>

<% end %>