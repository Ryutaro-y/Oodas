<%= form_with(model: stock) do |form| %>
  <% if stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
        <% stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="form-group col-md-3">
      <%= form.label :ink_name, "インク名" %>
      <%= form.text_field :ink_name %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :color_type, "色" %>
      <%= form.text_field :color_type %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :location_name, "ロケーション" %>
      <%= form.select :location_name, options_for_select(['ロケーション1', 'ロケーション2', 'ロケーション3']) %>
    </div>
  </div>

  <div class="form">
    <div class="form-group col-md-3">
      <%= form.label :stage, "段" %>
      <%= form.number_field :stage %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :quantity, "在庫数" %>
      <%= form.number_field :quantity %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :user_id, "管理者" %>
      <%= form.collection_select :user_id, User.all, :id, :name, {} %>
    </div>
  </div>

  <div><%= form.submit "登録", class: 'btn btn-primary register-btn' %></div>
<% end %>