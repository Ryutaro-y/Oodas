<%= form_with(model: stock) do |form| %>
  <% if stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
        <% stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="form-group">
      <%= form.label :インク名 %>
      <%= form.text_field :ink_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :色 %>
      <%= form.text_field :color_type, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :ロケーション %>
      <%= form.text_field :location_id, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :段 %>
      <%= form.number_field :stage, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :在庫数 %>
      <%= form.number_field :quantity, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :管理者 %>
      <%= form.text_field :user_id, class: 'form-control' %>
    </div>
    <div><%= form.submit "登録", class: 'btn btn-primary register-btn' %></div>
  </div>
<% end %>
